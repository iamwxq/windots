{
  /* window & workbench */
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.dialogStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "window.newWindowDimensions": "inherit",
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabActionLocation": "right",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.iconTheme": "catppuccin-perfect-mocha",
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 20,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.editor.editorActionsLocation": "hidden",

  /* common */
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.readonlyInclude": {
    "node_modules/*": true
  },
  "http.proxy": "http://127.0.0.1:23088",
  "http.proxyAuthorization": null,
  "http.proxyStrictSSL": false,
  // "http.proxySupport": "off", // DO NOT set this config, whatever 'on' or 'off'
  "security.allowedUNCHosts": ["wsl.localhost"],
  "security.workspace.trust.untrustedFiles": "open",

  /* terminal */
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono, 霞鹜新晰黑, Microsoft Yahei, monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.tabs.enabled": true,

  /* editor */
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.colorDecorators": true, // since we already have 'color highlight' extension
  "editor.cursorBlinking": "blink",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.detectIndentation": false,
  "editor.defaultColorDecorators": true,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.fontFamily": "FiraCode Nerd Font Mono, 霞鹜新晰黑, Microsoft Yahei, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": false,
  "editor.guides.highlightActiveIndentation": "always",
  "editor.hover.sticky": true,
  "editor.inlayHints.fontSize": 14,
  "editor.inlayHints.padding": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.scale": 2,
  "editor.minimap.size": "fit",
  "editor.minimap.renderCharacters": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.quickSuggestions": {
    "comments": "off",
    "other": "on",
    "strings": "on"
  },
  "editor.roundedSelection": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "inline",
  "editor.suggestSelection": "first",
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.invisibleCharacters": false,

  /* explorer */
  "explorer.decorations.colors": true,

  /* style validate */
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  /* zen mode */
  "zenMode.hideLineNumbers": false,

  /* codesnap */
  "codesnap.backgroundColor": "#abb8c3",
  "codesnap.boxShadow": "rgba(0, 0, 0, 0) 0px 20px 68px",
  "codesnap.containerPadding": "0em",
  "codesnap.transparentBackground": true,

  /* color highlight */
  "color-highlight.matchRgbWithNoFunction": false,
  "color-highlight.markerType": "underline",
  "color-highlight.matchWords": true,

  /* colorscheme - catppuccin */
  "catppuccin.accentColor": "blue",
  "catppuccin.boldKeywords": false,
  "catppuccin.bracketMode": "neovim",
  "catppuccin.colorOverrides": {
    "mocha": {
      "base": "#000000",
      "mantle": "#000000",
      "crust": "#000000"
    }
  },
  "catppuccin.extraBordersEnabled": false,
  "catppuccin.italicKeywords": false,
  "catppuccin.italicComments": false,

  /* errorlens */
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["eslint"],
  "errorLens.gutterIconsEnabled": false,
  "errorLens.gutterIconsFollowCursorOverride": false,
  "errorLens.gutterIconSet": "defaultOutline",
  "errorLens.messageBackgroundMode": "none",

  /* eslint */
  "eslint.execArgv": ["--max_old_space_size=8192"],
  "eslint.probe": [
    "html",
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "eslint.run": "onType",
  "eslint.runtime": "node",

  /* evenbettertoml */
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.columnWidth": 88,
  "evenBetterToml.schema.enabled": true,
  "evenBetterToml.schema.links": true,

  /* dprint */
  "dprint.verbose": false,

  /* gitlens */
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,

  /* leetcode */
  "leetcode.enableSideMode": false,
  "leetcode.endpoint": "leetcode-cn",
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.hint.commandShortcut": false,
  "leetcode.hint.commentDescription": false,
  "leetcode.hint.setDefaultLanguage": false,
  "leetcode.showDescription": "In File Comment",
  "leetcode.useEndpointTranslation": false,
  "leetcode.workspaceFolder": "d:/project/leetcode-js",

  /* lingma */
  "Lingma.methodQuickOperation": false,

  /* live server */
  "liveServer.settings.donotShowInfoMsg": true,

  /* markdown-preview */
  "markdown-preview-enhanced.codeBlockTheme": "one-dark.css",
  "markdown-preview-enhanced.enableExtendedTableSyntax": true,
  "markdown-preview-enhanced.enableHTML5Embed": true,
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "markdown-preview-enhanced.enableTypographer": true,
  "markdown-preview-enhanced.HTML5EmbedIsAllowedHttp": true,
  "markdown-preview-enhanced.HTML5EmbedUseLinkSyntax": true,

  /* mdx */
  "mdx.server.enable": true,

  /* path inteliisense */
  "javascript.suggest.paths": false,
  "typescript.suggest.paths": false,
  "typescript.preferences.jsxAttributeCompletionStyle": "auto",

  /* oxc */
  "oxc-client.run": "onType",

  /* prettier */
  "prettier.arrowParens": "always",
  "prettier.bracketSameLine": true,
  "prettier.bracketSpacing": true,
  "prettier.documentSelectors": [],
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.enable": false,
  "prettier.enableDebugLogs": false,
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.ignorePath": ".prettierignore",
  "prettier.insertPragma": false,
  "prettier.jsxSingleQuote": true,
  "prettier.prettierPath": "",
  "prettier.printWidth": 80,
  "prettier.proseWrap": "preserve",
  "prettier.quoteProps": "as-needed",
  "prettier.requireConfig": false,
  "prettier.requirePragma": false,
  "prettier.resolveGlobalModules": false,
  "prettier.semi": true,
  "prettier.singleAttributePerLine": false,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.useEditorConfig": true,
  "prettier.useTabs": false,
  "prettier.vueIndentScriptAndStyle": false,
  "prettier.withNodeModules": false,

  /* tailwind css */
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"] // support `clsx`
  ],

  /* todo tree */
  "todo-tree.tree.showCurrentScanMode": false,
  "todo-tree.tree.showCountsInTree": true,

  /* c# */
  "csharp.format.enable": true,
  "csharp.semanticHighlighting.enabled": true,
  "dotnetAcquisitionExtension.enableTelemetry": false,
  "dotnet.codeLens.enableReferencesCodeLens": false,
  "dotnet.codeLens.enableTestsCodeLens": false,
  "[csharp]": {
    // "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.maxTokenizationLineLength": 2500,
    "editor.tabSize": 4
  },

  /* c/c++ */
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.clang_format_path": "D:/develop/mingw64/bin/clang-format.exe",
  "C_Cpp.clang_format_style": "file:C:/Users/whoev/.clang-format",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c17",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },

  /* dart */
  "dart.flutterHotReloadOnSave": "all",
  "dart.showMainCodeLens": false,
  "dart.showTestCodeLens": false,
  "dart.previewFlutterUiGuides": true,
  "dart.showDartPadSampleCodeLens": false,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "[dart]": {
    // "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.guides.indentation": false,
    "editor.tabSize": 4
  },

  /* deno */
  "deno.cacheOnSave": true,

  /* go */
  "go.enableCodeLens": {
    "runtest": false
  },
  "go.formatTool": "gofumpt",
  "go.inlayHints.compositeLiteralFields": false,
  "go.inlayHints.constantValues": false,
  "go.inlayHints.functionTypeParameters": false,
  "go.inlayHints.rangeVariableTypes": false,
  "go.inlayHints.assignVariableTypes": false,
  "go.inlayHints.compositeLiteralTypes": false,
  "go.inlayHints.parameterNames": false,
  "gopls": {
    "ui.codelenses": {
      "generate": false,
      "upgrade_dependency": false,
      "tidy": false,
      "vendor": false
    },
    "ui.semanticTokens": true
  },
  "go.toolsManagement.autoUpdate": true,
  "go.showWelcome": false,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4
  },

  /* javascript & typescript */
  "js/ts.implicitProjectConfig.target": "ESNext",

  /* json/jsonc */
  "json.format.enable": false,

  /* mdx */
  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },

  /* python */
  "notebook.lineNumbers": "on",
  "notebook.output.scrolling": true,
  "python.terminal.activateEnvironment": false,
  "python.condaPath": "D:/develop/miniconda/condabin",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4
  },

  /* rust */
  "rust-analyzer.hover.actions.enable": false,
  "rust-analyzer.lens.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },

  /* vue */
  "vue.codeActions.enabled": false,
  "vue.codeLens.enabled": false,
  "vue.autoInsert.bracketSpacing": true,
  "vue.updateImportsOnFileMove.enabled": true,
  "vue.server.vitePress.supportMdFile": true,

  /* vim */
  "vim.foldfix": true,
  "vim.hlsearch": false,
  "vim.leader": "<space>",
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "black",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.highlightedyank.color": "rgba(230, 230 , 230, 0.7)",
  "vim.autoSwitchInputMethod.defaultIM": "1033",
  "vim.autoSwitchInputMethod.obtainIMCmd": "D:/develop/bin/im-select.exe",
  "vim.autoSwitchInputMethod.switchIMCmd": "D:/develop/bin/im-select.exe {im}",
  "vim.handleKeys": {
    "<C-a>": true,
    "<C-b>": false,
    "<C-f>": false,
    "<C-j>": false,
    "<C-w>": false,
    "<C-x>": false
  },
  "vim.insertModeKeyBindings": [{ "before": ["j", "k"], "after": ["<Esc>"] }],
  "vim.normalModeKeyBindings": [
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "c"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    { "before": ["leader", "/"], "after": ["g", "c", "c"] },
    { "before": ["leader", "z"], "commands": ["workbench.action.toggleZenMode"] },
    { "before": ["leader", "d", "b"], "commands": ["editor.debug.action.toggleBreakpoint"] },
    { "before": ["leader", "f", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "l", "a"], "commands": ["editor.action.quickFix"] },
    { "before": ["leader", "l", "s"], "commands": ["editor.action.triggerSuggest"] },
    { "before": ["leader", "1"], "commands": ["workbench.action.focusFirstEditorGroup"] },
    { "before": ["leader", "2"], "commands": ["workbench.action.focusSecondEditorGroup"] },
    { "before": ["leader", "3"], "commands": ["workbench.action.focusThirdEditorGroup"] },
    { "before": ["leader", "4"], "commands": ["workbench.action.focusFourthEditorGroup"] },
    { "before": ["leader", "5"], "commands": ["workbench.action.focusFifthEditorGroup"] },
    { "before": ["[", "d"], "commands": ["editor.action.marker.prevInFiles"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.nextInFiles"] },
    { "before": ["\\"], "commands": ["workbench.action.splitEditorDown"] },
    { "before": ["|"], "commands": ["workbench.action.splitEditor"] },
    { "before": ["K"], "commands": ["editor.action.showHover"] },
    { "before": ["H"], "commands": ["extension.vim_ctrl+pageup"] },
    { "before": ["L"], "commands": ["extension.vim_ctrl+pagedown"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["<C-a>"], "after": ["g", "g", "V", "G"] },
    { "before": ["<S-Tab>"], "after": ["<", "<"] },
    { "before": ["<Tab>"], "after": [">", ">"] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["leader", "/"], "after": ["g", "c"] },
    { "before": ["<C-a>"], "after": ["<Esc>", "<C-o>", "<C-o>"] },
    { "before": ["<Tab>"], "after": [">", ">", "<Esc>"] },
    { "before": ["<S-Tab>"], "after": ["<", "<", "<Esc>"] }
  ]
}
